pipeline{
    agent any
    parametes{

        choice(name: 'action', choices: 'create\destroy\destroyekscluster', description: 'create/update or destroy eks')
    }

    stages{

        stage('git checkout'){

            steps{
                git 'https://github.com/ravihebbal/java_login_app1.git'
                
            }
        }

        stage('eks connect'){

            steps{

                sh 'aws eks update-kubeconfig --name ed-eks-01 --region us-east-1'
                
            }
        }

